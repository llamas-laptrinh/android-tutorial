<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp"
    tools:context=".ui.home.DetailActivity">
    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/item_banner"
        android:layout_width="match_parent"
        android:layout_weight=".30"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/item_title"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/black_200"
        android:layout_width="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginVertical="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginEnd="6dp"
            android:id="@+id/item_author_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/item_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight=".60"
        android:layout_height="0dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black_200"
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout
        android:paddingVertical="6dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
            android:id="@+id/btn_like"
           android:background="@drawable/rounded_shape"
           android:layout_height="wrap_content">
           <ImageView
               android:src="@drawable/baseline_thumb_up_off_alt_24"
               android:layout_width="32dp"
               android:layout_marginEnd="4dp"
               android:layout_height="32dp"/>
           <TextView
               android:textSize="18sp"
               android:id="@+id/item_like_count"
               android:textColor="@color/gray_200"
               android:text="1.2k"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
           <LinearLayout
               android:padding="8dp"
               android:background="@drawable/rounded_shape"
               android:layout_marginStart="12dp"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:src="@drawable/baseline_remove_red_eye_24"
                   android:layout_width="32dp"
                   android:layout_marginEnd="4dp"
                   android:layout_height="32dp"/>
               <TextView
                   android:textSize="18sp"
                   android:id="@+id/item_view_count"
                   android:textColor="@color/gray_200"
                   android:text="1.2k"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
    </LinearLayout>
</LinearLayout>